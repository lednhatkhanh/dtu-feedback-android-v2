<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.laluna_team.dtufeedbackv2.DetailActivity"
        android:padding="16dp">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/feedback_imageView"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:background="@color/colorAccent"/>
                    <ImageView
                        android:id="@+id/feedback_status_imageView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_imageView"
                        android:background="@color/colorGreen"
                        android:src="@drawable/ic_check_white_24dp"/>
                    <TextView
                        android:id="@+id/feedback_title_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_status_imageView"
                        android:layout_marginTop="16dp"
                        tools:text="Title goes here"
                        android:textSize="20sp"
                        android:textColor="@color/colorTextPrimary"/>
                    <TextView
                        android:id="@+id/feedback_category_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_title_textView"
                        tools:text="Category goes here"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextSecondary"/>
                    <TextView
                        android:id="@+id/feedback_location_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_category_textView"
                        tools:text="Location goes here"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextSecondary"/>
                    <TextView
                        android:id="@+id/feedback_description_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_location_textView"
                        tools:text="Description goes here"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextPrimary"/>
                    <android.support.constraint.Guideline
                        android:id="@+id/button_group_guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>
                    <Button
                        android:id="@+id/feedback_toggle_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/button_group_guideline"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_description_textView"
                        android:text="Mark as done"
                        android:drawableStart="@drawable/ic_check_blue_24dp"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:padding="16dp"/>
                    <Button
                        android:id="@+id/feedback_update_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/button_group_guideline"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_description_textView"
                        android:text="Update"
                        android:textColor="#333333"
                        android:drawableStart="@drawable/ic_change_gray_24dp"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:padding="16dp"/>
                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/feedback_toggle_button"
                        android:background="@color/colorDivider"
                        android:layout_marginTop="16dp"/>
                    <EditText
                        android:id="@+id/comment_content_editText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/divider"
                        android:maxLines="8"
                        android:minLines="4"
                        android:lines="6"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:layout_marginTop="16dp"
                        android:hint="Comment"/>
                    <Button
                        android:id="@+id/add_comment_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/comment_content_editText"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:text="Comment"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/comment_recyclerView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/add_comment_button"
                        app:layout_constraintBottom_toTopOf="@+id/bottom_loading_indicator" />
                    <ProgressBar
                        android:id="@+id/bottom_loading_indicator"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"/>
                </android.support.constraint.ConstraintLayout>
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>
</layout>
